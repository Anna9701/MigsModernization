@page
@model MigsModernization.Pages.Migs.Modernizations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Modernization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modernization.ModernizationName" class="control-label"></label>
                <input asp-for="Modernization.ModernizationName" class="form-control" />
                <span asp-validation-for="Modernization.ModernizationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modernization.Performed" class="control-label"></label>
                <input asp-for="Modernization.Performed" class="form-control" />
                <span asp-validation-for="Modernization.Performed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modernization.PlannedBy" class="control-label"></label>
                <input asp-for="Modernization.PlannedBy" class="form-control" />
                <span asp-validation-for="Modernization.PlannedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modernization.MigSideNumber" class="control-label"></label>
                <select asp-for="Modernization.MigSideNumber" class ="form-control" asp-items="ViewBag.MigSideNumber"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

