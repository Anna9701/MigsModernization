@page
@model MigsModernization.Pages.Migs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Mig</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mig.SideNumber" class="control-label"></label>
                <input asp-for="Mig.SideNumber" class="form-control" />
                <span asp-validation-for="Mig.SideNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                Airplane
                <select asp-for="Mig.AirplaneId" class="form-control" asp-items="ViewBag.AirplaneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mig.Unit" class="control-label"></label>
                <select asp-for="Mig.Unit" class="form-control" asp-items="ViewBag.Unit"></select>
            </div>
            <div class="form-group">
                Staging area
                <select asp-for="Mig.StagingArea" class="form-control" asp-items="ViewBag.StagingArea"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mig.Notes" class="control-label"></label>
                <input asp-for="Mig.Notes" class="form-control" />
                <span asp-validation-for="Mig.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
